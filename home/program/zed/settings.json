{
  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-7-sonnet"
    }
  },
  "language_models": {
    "ollama": {
      "low_speed_timeout_in_seconds": 30
    }
  },
  "lsp": {
    "pyright": {
      "binary": {
        "ignore_system_version": true
      }
    }
  },
  "buffer_font_family": "FiraCode Nerd Font",
  "cursor_blink": false,
  "use_system_clipboard": "on_yank",
  "theme": "Catppuccin Macchiato",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "buffer_font_size": 16,
  "vim_mode": true
}
